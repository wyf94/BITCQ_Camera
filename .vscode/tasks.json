{
	"version": "2.0.0",
	"tasks": 
	[
		{
			"type": "shell",
			"command": "catkin_make -DCMAKE_BUILD_TYPE=Debug",
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "catkin_make: build"
		},
		{
			"type": "shell",
			"command": "catkin_make clean",
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": "build",
			"label": "catkin_make: clean"
		},
		{
			"type": "shell",
			"command":"catkin_make -DCMAKE_TYPE=Release",
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": "build",
			"label": "catkin_make: release"
		}
	]
}